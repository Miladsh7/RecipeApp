<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/Recipe_space_3x"
    app:cardElevation="@dimen/_2dp"
    android:layout_marginVertical="@dimen/Recipe_space_1x"
    android:layout_marginHorizontal="@dimen/Recipe_space_5x">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView2"
            android:layout_width="@dimen/Recipe_space_7x"
            android:layout_height="@dimen/Recipe_space_7x"
            android:layout_marginStart="@dimen/Recipe_space_4x"
            android:layout_marginTop="@dimen/Recipe_space_3x"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/recip"
                android:layout_gravity="center"/>

        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Recipe_space_3x"
            android:textAppearance="@style/TextAppearanceBold.small"
            app:layout_constraintStart_toEndOf="@id/materialCardView2"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_desc_notification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_56dp"
            android:layout_marginVertical="@dimen/Recipe_space_1x"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearanceRegular.small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_notification"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>