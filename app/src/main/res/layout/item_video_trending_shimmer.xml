<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Recipe_space_2x"
        app:cardBackgroundColor="@color/Neutral_10"
        app:cardCornerRadius="@dimen/Recipe_space_2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView3"
                android:layout_width="@dimen/_56dp"
                android:layout_height="@dimen/_56dp"
                android:layout_marginVertical="@dimen/Recipe_space_2x"
                android:layout_marginStart="@dimen/Recipe_space_3x"
                app:cardBackgroundColor="@color/Neutral_20"
                app:cardCornerRadius="@dimen/Recipe_space_1x"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </com.google.android.material.card.MaterialCardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/txt_title_video_trending"
                android:layout_width="@dimen/_80dp"
                android:layout_height="@dimen/_20dp"
                android:layout_marginStart="@dimen/Recipe_space_4x"
                android:background="@color/Neutral_20"
                app:layout_constraintStart_toEndOf="@+id/materialCardView3"
                app:layout_constraintTop_toTopOf="@+id/materialCardView3" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/txt_time_video_trending"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_15dp"
                android:layout_marginTop="@dimen/_2mdp"
                android:background="@color/Neutral_20"
                app:layout_constraintBottom_toBottomOf="@+id/materialCardView3"
                app:layout_constraintStart_toStartOf="@+id/txt_title_video_trending"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_video_trending" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/appCompatImageView2"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_15dp"
                android:layout_marginStart="@dimen/Recipe_space_2x"
                android:background="@color/Neutral_20"
                android:padding="@dimen/_2mdp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_time_video_trending"
                app:layout_constraintStart_toEndOf="@+id/txt_time_video_trending"
                app:layout_constraintTop_toTopOf="@+id/txt_time_video_trending" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>